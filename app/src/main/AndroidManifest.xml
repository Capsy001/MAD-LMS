<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.betterlearn">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_betterlearn_only_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_betterlearn_only_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.BetterLearn">
        <activity android:name=".ForgotPassword" />
        <activity android:name=".Institutes" />
        <activity android:name="TeacherFragments.AdminCourse" />
        <activity android:name="StudentFragments.StudentDashboard" />
        <activity android:name=".SignUp" />
        <activity android:name=".Login" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name="StudentFragments.StudentAnnouncementsView" />
    </application>

</manifest>